<%- include('partials/header') %>

<div class="flex justify-center items-center py-12 bg-gradient-to-br from-indigo-50 to-white min-h-[calc(100vh-140px)]">
  <div class="bg-white shadow-2xl border-2 border-indigo-200 rounded-xl p-8 w-full max-w-md transform transition duration-300 hover:scale-[1.01]">
    <h2 class="text-3xl font-bold mb-6 text-center text-indigo-600 tracking-wide">Signup</h2>

    <form action="/signup" method="POST" class="space-y-5">
      <input type="text" name="name" placeholder="Full Name" required 
        class="w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-lg shadow-inner focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-300 transition placeholder-gray-400">

      <input type="email" name="email" placeholder="Email Address" required 
        class="w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-lg shadow-inner focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-300 transition placeholder-gray-400">

      <input type="password" name="password" placeholder="Password" required 
        class="w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-lg shadow-inner focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-300 transition placeholder-gray-400">

      <select name="role" 
        class="w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-lg shadow-inner focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-300 transition">
        <option value="User">User</option>
        <option value="admin">Admin</option>
      </select>

      <button type="submit" 
        class="w-full bg-indigo-600 hover:bg-indigo-700 text-white py-3 rounded-lg shadow-lg font-semibold tracking-wide transition focus:ring-2 focus:ring-indigo-300">
        Create Account
      </button>
    </form>

    <p class="mt-6 text-center text-gray-600">
      Already have an account? 
      <a href="/login" class="text-indigo-600 font-medium hover:underline">Login here</a>
    </p>
  </div>
</div>

<%- include('partials/footer') %>
